	author = {Ar{\'{e}}valo, Gloria and Manueles, Alexandra M. and Guevara, Mario Antonio and Olmedo, Guillermo Federico},
	booktitle = {21 World Congress of Soil Science},
	file = {:home/guillermo/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ar{\'{e}}valo et al. - 2018 - Soil Organic Carbon Store in Honduras.pdf:pdf},
